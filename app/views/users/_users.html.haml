.pull-right
  = paginate @users

- if @users.suggestions.present?
  .text-danger
    Did you mean:
    - @users.suggestions.each do |suggestion|
      = link_to suggestion, query: suggestion

%br
%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Email
      %th
      %th
      %th

  %tbody.can-get-empty
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :data => { confirm: 'Are you sure?' }, :method => :delete
    %tr.empty-row
      %td{colspan: 5}
        %small No Rows Found


